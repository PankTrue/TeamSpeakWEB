<%= form_tag audiobot_upload_audio_file_path(id: @audiobot.id), multipart: true  do %>
  <%= file_field_tag :audio_files, name: 'audio_files[]', multiple: true %>
  <%= submit_tag 'Upload' %>
<% end %>


<h2>PlayList | Total: <%= @total %> </h2>
<div>
  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Size</th>
    </tr>
    </thead>

    <tbody>
    <% @playlist.each_with_index do |audiofile,index| %>
       <% size = String.new %>
      <% audiofile.slice!(0) if audiofile[0] == ' ' %>
      <% audiofile.each_char do |char|%>
        <% break if char == ' ' %>
        <% audiofile.slice!(0) %>
      <% size << char %>
      <% end %>
      <tr>
        <td> <%= index+1 %></td>
        <td><%= audiofile %></td>
        <td> <%= size %> </td>

        <td><%= link_to 'Play', audiobot_play_audio_path(id: @audiobot.id,audio_id: index+1),method: :post, class: 'btn btn-primary'%></td>

      </tr>
    <% end %>
    </tbody>
  </table>
</div>
