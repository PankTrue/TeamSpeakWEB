  <h2>Настройки</h2>


    <%= form_for @audiobot, url: {controller: "audiobot", action: "settings_up"}, method: :post do |f| %>
        <% if @audiobot.errors.any? %>
            <div class="alert alert-danger">
              <h2><%= pluralize(@audiobot.errors.count, "ошибка") %></h2>

              <% @audiobot.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </div>
        <% end %>


        <div class="border">
          <%= f.label 'Адрес' %>
          <div class="input-group col-xs-8 col-sm-6 col-md-5 col-lg-4">
            <%= f.text_field :address, class: 'form-control' %>
          </div>
        </div>

        <div class="border">
          <%= f.label 'Пароль' %>
          <div class="input-group col-xs-8 col-sm-6 col-md-5 col-lg-4">
            <%= f.text_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="border">
          <%= f.label 'Псевдоним' %>
          <div class="input-group col-xs-8 col-sm-6 col-md-5 col-lg-4">
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>
        </div>

        <div class="border">
          <%= f.label 'Стандартный канал' %>
          <div class="input-group col-xs-8 col-sm-6 col-md-5 col-lg-4">
            <%= f.number_field :default_channel, class: 'form-control' %>
          </div>
        </div>




      <div class="actions">
        <%= f.submit "Сохранить", class: 'btn btn-default'%>
      </div>


    <% end %>




  <br>

  <%= link_to 'Назад', audiobot_panel_path(@audiobot), class: "btn btn-primary"  %>
