<%= form_for @ts, url: {action: "create"} do |f| %>
  <% if @ts.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ts.errors.count, "error") %> prohibited this ts from being saved:</h2>

      <ul>
      <% @ts.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :slots %>
